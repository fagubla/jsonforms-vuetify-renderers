{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/country"
    },
    {
      "type": "Control",
      "scope": "#/properties/subdivision",
      "rule": {
        "effect": "RELOAD",
        "condition": {
          "type": "AND",
          "conditions": [
            {
              "type": "DEPENDENCY",
              "scope": "#/properties/country"
            },
            {
              "type": "LEAF",
              "scope": "#/properties/country",
              "expectedValue": "Bolivia"
            }
          ]
        }
      }
    },

    {
      "type": "Control",
      "scope": "#/properties/location",
      "rule": {
        "effect": "RELOAD",
        "condition": {
          "type": "AND",
          "conditions": [
            {
              "type": "DEPENDENCY",
              "scope": "#/properties/country"
            },
            {
              "type": "LEAF",
              "scope": "#/properties/country",
              "expectedValue": "Bolivia"
            },
            {
              "type": "DEPENDENCY",
              "scope": "#/properties/subdivision"
            },
            {
              "type": "LEAF",
              "scope": "#/properties/subdivision",
              "expectedValue": "Oruro"
            }
          ]
        }
      }
    }
  ]
}